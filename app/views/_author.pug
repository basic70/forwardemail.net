.d-inline-block.mx-auto.text-left.small.align-middle.no-search
  .d-flex.align-items-center
    img(
      width=92,
      height=50,
      src=manifest("img/art/group.svg"),
      alt=config.appName + " " + t("Team")
    )
    .d-flex.flex-column.ml-2.font-weight-bold
      div
        .small= t("Written by")
        div
          = config.appName
          span.d-none.d-md-inline
            = " "
            = t("Team")
          img.ml-1.mb-1(
            src=manifest("img/testimonials/twitter-verified.svg"),
            width=20,
            height=20,
            alt="Verified"
          )
    .d-none.d-md-flex.flex-column.ml-3.ml-md-5.font-weight-bold.text-themed
      div
        .small
          span.d-none.d-md-inline
            i.fa.fa-calendar-day
            = " "
          = t("Published")
        .dayjs(
          data-time=publishedISOString ? new Date(publishedISOString).getTime() : dayjs().startOf("month").toDate().getTime(),
          data-time-style="false"
        )
          if publishedISOString
            if user
              = dayjs(new Date(publishedISOString)).tz(user.timezone === 'Etc/Unknown' ? 'UTC' : user.timezone).format("M/D/YY")
            else
              = dayjs(new Date(publishedISOString)).format("M/D/YY")
          else
            if user
              = dayjs().tz(user.timezone === 'Etc/Unknown' ? 'UTC' : user.timezone).startOf("month").format("M/D/YY")
            else
              = dayjs().startOf("month").format("M/D/YY")
    .d-none.d-md-flex.flex-column.ml-3.ml-md-5.font-weight-bold.text-themed
      div
        .small
          span.d-none.d-md-inline
            i.fa.fa-clock
            = " "
          = t("Time to read")
        div
          if isBot(ctx.get('User-Agent'))
            = t("Less than 5 minutes")
          else
            span.d-none.d-md-inline
              = t("Less than 5 minutes")
            span.d-inline.d-md-none
              = t("< 5 minutes")
