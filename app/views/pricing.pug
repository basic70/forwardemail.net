                    .dropdown-divider
                    a.dropdown-item(
                      href=l("/my-account/domains/new?plan=enhanced_protection")
                    )
                      i.fa.fa-plus
                      = " "
                      = t("Add New Domain")

            ul.list-group.list-group-flush.mb-1
              li.list-group-item.d-flex.align-items-center.border-top.border-themed.bg-dark.text-white.font-weight-bold
