      tabindex="-1",
      role="dialog",
      aria-labelledby="modal-pricing-video-title",
      aria-hidden="true"
    )
      .modal-dialog.modal-lg(role="document")
        .modal-content
          .modal-header.text-center.d-block
            #modal-watch-video-title.h4.d-inline-block.ml-4= t("Product Tour")
            button.close(
              type="button",
              data-dismiss="modal",
              aria-label="Close"
            )
              span(aria-hidden="true") &times;
          .modal-body
            .lazyframe(
              title=t("Forward Email's Paid Plans"),
              data-vendor="youtube_nocookie",
              data-src="https://www.youtube-nocookie.com/embed/N6zjv40zuIY?autoplay=0"
            )

  //-.
    if !isBot(ctx.get('User-Agent'))
      .fixed-bottom.text-center.d-print-none.d-lg-none
        .bg-dark.p-2.border-top.border-themed
          ul.list-inline.mb-0
            li.list-inline-item
              a.btn.btn-sm.btn-light(href="#free")
                = t("Free")
                = " "
                i.fa.fa-search-plus
            li.list-inline-item
              a.btn.btn-sm.btn-success(href="#enhanced")
                = t("Enhanced")
                = " "
                i.fa.fa-search-plus
            li.list-inline-item
              a.btn.btn-sm.btn-primary(href="#team")
                = t("Team")
                = " "
                i.fa.fa-search-plus

  if (!user && !boolean(ctx.query.pricing)) || isBot(ctx.get('User-Agent'))
    .min-vh-100.d-flex.flex-column.pb-5(
      data-ignore-hash-change,
      id=!isPDF && (ctx.pathWithoutLocale === "/" || ctx.pathWithoutLocale === "/private-business-email" || Object.keys(useCases).includes(ctx.pathWithoutLocale)) && !isBot(ctx.get("User-Agent")) ? "freddy" : "",
      class=isBot(ctx.get("User-Agent")) ? "" : "text-white"
    )
      - const isSafari = /^((?!chrome|android|crios|fxios).)*safari/i.test(ctx.get("User-Agent"));
      if (!isPDF && (ctx.pathWithoutLocale === '/' || ctx.pathWithoutLocale === '/private-business-email' || Object.keys(useCases).includes(ctx.pathWithoutLocale)) && !isBot(ctx.get('User-Agent')))
        #stars
        #stars2
        #stars3
        if !isSafari
          #rocket.d-none.user-select-none(data-ignore-hash-change)
        #waving.user-select-none(
          class=isSafari ? "" : "floating-animation",
          data-ignore-hash-change
        )
      .container.my-auto.pt-5
        .row
          .col-12.text-center
            h1.mb-3.text-sans-serif
              if Object.keys(useCases).includes(ctx.pathWithoutLocale)
                .text-left!= t(useCases[ctx.pathWithoutLocale][0])
              else
                != meta.title.replace(striptags(config.metaTitleAffix).replace("&#124;", "|"), "")
            p.d-none.d-md-block
              if Object.keys(useCases).includes(ctx.pathWithoutLocale)
                .text-left!= meta.description
              else
                != meta.description

            if !isBot(ctx.get("User-Agent"))
              if Object.keys(useCases).includes(ctx.pathWithoutLocale)
                .text-left
                  a.btn.btn-light.btn-sm.font-weight-bold.mb-3.mb-md-5(
                    href="/technical-whitepaper.pdf",
                    target="_blank"
                  )
                    i.fa.fas.fa-book
                    = " "
                    = t("Technical Whitepaper")
              else
                a.btn.btn-light.btn-sm.font-weight-bold.mb-3.mb-md-5(
                  href="/technical-whitepaper.pdf",
                  target="_blank"
                )
                  i.fa.fas.fa-book
                  = " "
                  = t("Technical Whitepaper")
            if isBot(ctx.get("User-Agent"))
              ul.list-inline
                li.list-inline-item.d-block.d-md-inline
                  a.btn.mb-3(
                    class=isBot(ctx.get("User-Agent")) ? "btn-dark" : "btn-light",
                    href=isBot(ctx.get("User-Agent")) ? l("/private-business-email") : l("/private-business-email?pricing=true")
