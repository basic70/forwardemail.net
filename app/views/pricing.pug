                        href=l(`/my-account/domains/${punycode.toASCII(domain.name)}/billing?plan=enhanced_protection`),
                        class=domain.plan === "enhanced_protection" ? "disabled" : "",
                        aria-disabled=domain.plan === "enhanced_protection" ? "true" : "false"
