                      = "DMARC"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#do-you-support-email-best-practices")
                    )
                      = "ARC"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#how-do-i-set-up-srs-for-forward-email")
                    )
                      = "SRS"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.mr-1.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#how-do-i-set-up-mta-sts-for-forward-email")
                    )
                      = "MTA-STS"
                      = " "
                      i.fa.fa-angle-right
                  li.list-inline-item.lead
                    a.badge.badge-light(
                      target="_blank",
                      href=l("/faq#how-do-you-perform-dns-lookups-on-domain-names")
                    )
                      = "DNS over HTTPS"
                      = " "
                      i.fa.fa-angle-right
        #enhanced.col.mt-3.mt-lg-0
          .card.d-flex.flex-column.rounded-lg.bg-white.bg-themed.position-relative
            .card-body
              .h3.text-center.font-weight-bold
                = t("Enhanced")
              p.text-center.mb-3!= t('Send &amp; receive as <span class="notranslate">you@yourdomain.com</span>')
              .lead.text-center.mb-3.text-nowrap
                if user && user.plan !== 'free'
                  span.h5.font-weight-bold.d-block= t("Already upgraded")
                  s.d-block.h6.text-muted!= t('$3/month for <span class="text-decoration-underline">unlimited domains</span>')
                else
                  != t('<span class="d-inline-block h4 mb-0 font-weight-bold">$3</span><span class="d-inline-block h6 text-black text-themed-50">/month for <span class="text-decoration-underline">unlimited domains</span></span>')
