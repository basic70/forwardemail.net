extends ../../layout

block body
  .container.py-3.py-md-4.py-lg-5
    .row
      .col.text-center
        h1!= meta.title.replace(striptags(config.metaTitleAffix).replace("&#124;", "|"), "")
        p!= meta.description
        include ../../_author
        .markdown-body.mt-3: img.rounded-lg(
          src=manifest("img/articles/react.webp"),
          alt=""
        )
    .row.mt-3
      .col
        case locale
          when 'ar'
            include:md(isDocs="true") index-ar.md
          when 'cs'
            include:md(isDocs="true") index-cs.md
          when 'da'
            include:md(isDocs="true") index-da.md
          when 'de'
            include:md(isDocs="true") index-de.md
          when 'es'
            include:md(isDocs="true") index-es.md
          when 'fi'
            include:md(isDocs="true") index-fi.md
          when 'fr'
            include:md(isDocs="true") index-fr.md
          when 'he'
            include:md(isDocs="true") index-he.md
          when 'hu'
            include:md(isDocs="true") index-hu.md
          when 'id'
            include:md(isDocs="true") index-id.md
          when 'it'
            include:md(isDocs="true") index-it.md
